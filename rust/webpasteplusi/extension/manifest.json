{
  "manifest_version": 2,
  "name": "WebPastePlusI",
  "version": "0.0",

  "permissions": ["<all_urls>", "tabs", "background", "activeTab", "storage"],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}