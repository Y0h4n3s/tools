{
  "manifest_version": 2,
  "name": "Permutations",
  "version": "1.0",

  "background": {
    "page": "background.html"
  },
  "content_scripts":[
    {"matches":["<all_urls>"],
    "js":["popup.js"]}
  ],

  "browser_action": {
    "default_title": "Permutate",
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs",
    "background",
    "activeTab",
    "storage"
  ]
}
